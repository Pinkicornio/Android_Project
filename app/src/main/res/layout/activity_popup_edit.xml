<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupedit"
    android:layout_width="350sp"
    android:layout_height="500sp"
    android:layout_marginLeft="28sp"
    android:layout_marginTop="50sp"
    android:background="@drawable/popup_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/LinearLayoutedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4444"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista"
                android:textSize="35sp"
                android:fontFamily="@font/alice"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ListView
                android:id="@+id/listaCasa"
                android:layout_width="match_parent"
                android:layout_height="115dp" />

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="140sp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:background="#4444"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/spinnerCategoriaLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:hint="Name"/>
                <EditText
                    android:id="@+id/editlocalitation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:hint="Location"/>
                <EditText
                    android:id="@+id/editcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:hint="City"/>
                <EditText
                    android:id="@+id/editadress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:hint="Address"/>
            </LinearLayout>

            <Button
                android:id="@+id/editarPopUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                android:fontFamily="@font/alice"
                android:layout_marginTop="20sp"
                android:text="editar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>