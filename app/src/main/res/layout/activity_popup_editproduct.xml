<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupeditProduct"
    android:layout_width="350sp"
    android:layout_height="500sp"
    android:layout_marginStart="28sp"
    android:layout_marginTop="50sp"
    android:background="@drawable/popup_background"
    android:orientation="vertical"
    android:paddingStart="2sp"
    android:paddingEnd="2sp">

    <GridLayout
        android:id="@+id/centerScreenEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="15sp"
        android:paddingBottom="5sp"
        android:background="@color/grey"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listDatosEditar"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_row="0"
            android:layout_column="1" />

        <LinearLayout
            android:id="@+id/editarLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DEE3F1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Min Stock"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/MinStock"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/alice"
                android:textColor="@color/black"
                android:textSize="10sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/MinStockEditar"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="0" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Stock"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Stock"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/StockEditar"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textColor="@color/black"
                android:text="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/teal_700"
                    android:fontFamily="@font/alice"
                    android:text="Guardar"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/teal_700"
                    android:fontFamily="@font/alice"
                    android:text="Cancelar"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>
    </GridLayout>
</LinearLayout>